{
  "name": "x-bot",
  "description": "Twitter / X bot for responding to mentions with AI-generated answers.",
  "private": true,
  "type": "module",
  "license": "MIT",
  "author": "Travis Fischer <travis@transitivebullsh.it>",
  "contributors": [
    "Riley Tomasek <riley@dexa.ai>",
    "Travis Fischer <travis@transitivebullsh.it>"
  ],
  "repository": {
    "type": "git",
    "url": "dexaai/xbot"
  },
  "packageManager": "pnpm@8.15.3",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "exec": "tsx bin/xbot.ts",
    "prepare": "husky install",
    "test": "run-s test:*",
    "test:format": "prettier --check \"**/*.{js,ts,tsx}\"",
    "test:lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "test:typecheck": "tsc --noEmit",
    "test:unit": "vitest run"
  },
  "dependencies": {
    "@dexaai/dexter": "^1.2.8",
    "@keyv/redis": "^2.8.4",
    "@nangohq/node": "^0.37.24",
    "cleye": "^1.3.2",
    "delay": "^6.0.0",
    "dotenv-safe": "^8.2.0",
    "ioredis": "^5.3.2",
    "keyv": "^4.5.4",
    "ky": "^1.2.0",
    "nanoid": "^5.0.6",
    "openai": "^4.28.0",
    "p-map": "^7.0.1",
    "p-memoize": "^7.1.1",
    "p-throttle": "^6.1.0",
    "quick-lru": "^7.0.0",
    "tiny-invariant": "^1.3.1",
    "twitter-api-sdk": "^1.2.1",
    "twitter-utils": "^0.4.0",
    "type-fest": "^4.10.2",
    "url-regex": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@dexaai/eslint-config": "^0.4.0",
    "@total-typescript/ts-reset": "^0.5.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/dotenv-safe": "^8.1.6",
    "@types/node": "^20.11.19",
    "@types/twitter-text": "^3.1.10",
    "eslint": "^8.56.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vitest": "^1.3.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --ignore-unknown --write"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@dexaai/eslint-config",
      "@dexaai/eslint-config/node"
    ],
    "rules": {
      "no-console": "off",
      "import/order": "off",
      "no-process-env": "off"
    }
  }
}
